generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Employee {
  id         Int             @id @default(autoincrement())
  employeeId String          @unique
  fullName   String
  gender     String
  email      String          @unique
  phone      String?
  department String
  position   String
  joinDate   DateTime
  status     Employee_status @default(ACTIVE)
  address    String?
  birthDate  DateTime?
  salary     Int?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @default(now())

  @@index([department])
  @@index([status])
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum Employee_status {
  ACTIVE
  INACTIVE
}
